{% assign typeString = '' %}
{% if type %}
	{% assign typeString = 'type-' | append: type %}
{% endif %}
<!DOCTYPE html>
<html lang="en" class="page-{{ page.fileSlug }} {{ typeString }}">
	<head>
		<!-- Base meta tags -->
		<meta charset="UTF-8">
		<title>{{ title }}</title>
		<meta name="language" content="english" />
		<meta name="description" content="{{ description }}" />
		
		<!-- Reassure the browser that we are mobile-friendly -->
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, minimum-scale=1, initial-scale=1">
		<meta name="HandheldFriendly" content="True">
		
		<!-- OpenGraph -->
		<meta property="og:url" content="{{ page.url }}" />
		<meta property="og:site_name" content="Letourneau Civil Construction" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="{{ title }}" />
		<meta property="og:description" content="{{ description }}" />
		<meta property="og:image" content="{{ site.url }}/assets/img/og.png" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:description" content="{{ description }}" />
		<meta name="twitter:image" content="{{ site.url }}/assets/img/og.png" />
		<meta name="twitter:title" content="{{ title }}" />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;700&display=swap" rel="stylesheet">

		<!-- Favicons -->
		<link rel="icon" href="/assets/favicon/favicon.ico">
		<link rel="icon" href="/assets/favicon/favicon.svg" type="image/svg+xml" sizes="any">
		<link rel="apple-touch-icon" href="/assets/favicon/favicon-apple.png">
		<meta name="theme-color" content="#131e29">
		<link rel="manifest" href="/assets/manifest.json">

		{% for style in styles %}
			<link rel="stylesheet" href="{{ style }}" />
		{% endfor %}
		<link rel="stylesheet" href="/assets/css/style.css" />
	</head>
	<body class="layout">
		{% include 'components/nav/nav' %}
		
		{{ content }}
		
		{% include 'scripts' %}
	</body>
</html>